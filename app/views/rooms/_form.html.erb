<%= form_for(room) do |f| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
      <% room.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :物件名 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :賃料 %>
    <%= f.text_field :price %>円
  </div>

  <div class="field">
    <%= f.label :築年数 %>
    <%= f.number_field :age %>年
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_area :address %>
  </div>

  <div class="field">
    <%= f.label :備考 %>
    <%= f.text_area :remarks %>
  </div>

<hr>
  <%= f.fields_for :station do |station_form| %>
    <h3>最寄り駅１</h3>

    <div class="field">
      <%= station_form.label :路線名 %>
      <%= station_form.text_field :route1 %>
    </div>

    <div class="field">
      <%= station_form.label :駅名 %>
      <%= station_form.text_field :station1 %>
    </div>

    <div class="field">
      <%= station_form.label :徒歩分数 %>
      <%= station_form.text_field :walking1 %>分
    </div>
    <h3>最寄り駅２</h3>

    <div class="field">
      <%= station_form.label :路線名 %>
      <%= station_form.text_field :route2 %>
    </div>

    <div class="field">
      <%= station_form.label :駅名 %>
      <%= station_form.text_field :station2 %>
    </div>

    <div class="field">
      <%= station_form.label :徒歩分数 %>
      <%= station_form.text_field :walking2 %>分
    </div>
  <% end %>
    <div class="actions">
      <%= f.submit %>
    </div> 
<% end %>


